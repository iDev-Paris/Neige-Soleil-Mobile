<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page1">

    <RadioGroup
        android:id="@+id/idInformation"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/idInformation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#F78E21"
            android:text="Très Satisfait" />

        <RadioButton
            android:id="@+id/idInformation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#F78E21"
            android:text=" Satisfait" />

        <RadioButton
            android:id="@+id/idInformation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#F78E21"
            android:text=" Peu Satisfait" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="#07588F"
        android:text="Êtes-vous satisfait des services de propreté"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/idInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPonctualite" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="412dp"
        android:layout_height="159dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="1dp" />

    <RadioGroup
        android:id="@+id/idPonctualite"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/idPonctualite1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#F78E21"
            android:text="Très Satisfait" />

        <RadioButton
            android:id="@+id/idPonctualite2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#F78E21"
            android:text=" Satisfait" />

        <RadioButton
            android:id="@+id/idPonctualite3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#F78E21"
            android:text=" Peu Satisfait" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="#07588F"
        android:text="Êtes-vous satisfait du confort de votre séjour"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/idSuivant"
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:layout_marginBottom="35dp"
        android:background="#F78E21"
        android:backgroundTintMode="add"
        android:text="Suivant"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idInformation" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="408dp"
        android:layout_height="29dp"
        android:layout_marginTop="25dp"
        android:max="3"
        android:progress="1"
        android:progressTint="#07588F"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/idSuivant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idInformation" />
</androidx.constraintlayout.widget.ConstraintLayout>